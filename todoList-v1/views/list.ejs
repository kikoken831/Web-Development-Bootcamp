<!DOCTYPE html>
<%- include('header') -%>
<html lang="en">
  <body>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>
    <div class="box">
      <%for(item in itemList){%>
      <div class="item">
        <input type="checkbox" />
        <p><%= itemList[item] %></p>
      </div>
      <%}%>

      <form class="item" action="/" method="post">
        <input
          type="text"
          name="newItem"
          placeholder="New Item"
          required
          autocomplete="off"
        />
        <button type="submit" name="list" value=<%= listTitle%>>+</button>
      </form>
    </div>
  </body>
<%- include('footer') -%>
</html>
